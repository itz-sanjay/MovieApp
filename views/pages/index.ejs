            <li><a href="/home">Entertainment</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
        <!--Search-box------------->
        <form action="/" method="post" class="search-box">
            <!--input-->
            <input type="text" name="searchedMovie" placeholder="Search Movie" class="search-input" required/>
            <!--btn-->
            <button type="submit">
